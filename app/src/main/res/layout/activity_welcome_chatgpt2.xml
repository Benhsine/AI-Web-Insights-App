<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <com.yassine.aiwebinsights.RoundedImageView
        android:id="@+id/welcomeImage2"
        android:layout_width="279dp"
        android:layout_height="427dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ai_design" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeImage2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Welcome to Chatgpt"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/welcometext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="ChatGPT est capable de générer du texte, de traduire des langues, d'écrire différents types de contenu créatif et de répondre à des questions de manière informative, Click the 'Get Started' button below to embark on your AI adventure. Let's explore the limitless possibilities of AI together."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp" />


    <Button
        android:id="@+id/startchatgpt"
        style="@style/DarkRoundedButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="GET STARTED"
        android:textSize="16sp" />

</RelativeLayout>
